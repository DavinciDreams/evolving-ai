# Environment Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
ZAI_API_KEY=your_zai_api_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=agent.log

# Memory Configuration
MEMORY_PERSIST_DIRECTORY=./memory_db
MEMORY_COLLECTION_NAME=agent_memory
MAX_MEMORY_ENTRIES=10000

# Agent Configuration
DEFAULT_LLM_PROVIDER=zai
DEFAULT_MODEL=glm-4.7
EVALUATION_MODEL=glm-4.7
TEMPERATURE=0.7
MAX_TOKENS=2048

# Self-Modification Configuration
ENABLE_SELF_MODIFICATION=true
BACKUP_DIRECTORY=./backups
MAX_MODIFICATION_ATTEMPTS=3
REQUIRE_VALIDATION=true

# Evaluation Configuration
# Enable response evaluation (disable to reduce API calls and improve speed)
ENABLE_EVALUATION=false

# Knowledge Base Configuration
KNOWLEDGE_BASE_PATH=./knowledge_base
AUTO_UPDATE_KNOWLEDGE=true
KNOWLEDGE_SIMILARITY_THRESHOLD=0.8

# API Server Configuration
# Port the backend listens on (Coolify/hosting platforms set this automatically)
PORT=8000

# URL for internal API calls (e.g., from Discord integration to GitHub endpoint)
API_SERVER_URL=http://localhost:8000

# CORS allowed origins (comma-separated, or * for all)
# Set to your Vercel frontend URL in production, e.g.:
# CORS_ORIGINS=https://your-app.vercel.app,https://your-custom-domain.com
CORS_ORIGINS=*

# Tool Use Configuration
ENABLE_TOOL_USE=true
MAX_TOOL_ITERATIONS=15

# TPMJS Integration (optional, for external AI tool discovery)
# Get your API key at: https://tpmjs.com
TPMJS_API_KEY=

# GitHub Integration Configuration
# For self-improvement workflow: agent can analyze its own code and create PRs

# How to get a GitHub Personal Access Token:
# 1. Go to GitHub Settings → Developer settings → Personal access tokens
# 2. Generate new token (classic)
# 3. Select scopes: repo, workflow, write:packages
# 4. Copy the token and paste it here
GITHUB_TOKEN=your_github_personal_access_token_here

# Repository in format "owner/repository-name" (e.g., "microsoft/vscode")
GITHUB_REPO=owner/repository-name

# Default branch for creating improvement PRs
GITHUB_BRANCH=main

# Optional: Local repository path (defaults to current directory)
GITHUB_LOCAL_REPO_PATH=.

# Optional: GitHub repository URL (auto-derived from GITHUB_REPO if not set)
# This should be the full HTTPS URI to your repository
GITHUB_REPO_URL=https://github.com/owner/repository-name.git

# Discord Bot Integration Configuration
# For real-time interaction: agent can receive messages from Discord and respond

# How to create a Discord bot and get the token:
# 1. Go to https://discord.com/developers/applications
# 2. Click "New Application" and give it a name
# 3. Go to the "Bot" tab and click "Add Bot"
# 4. Under "Privileged Gateway Intents", enable "Message Content Intent"
# 5. Click "Reset Token" and copy the bot token
# 6. Go to OAuth2 → URL Generator
# 7. Select scopes: "bot" and "applications.commands"
# 8. Select permissions: Send Messages, Embed Links, Read Message History, Add Reactions
# 9. Copy the generated URL and use it to invite the bot to your server
# 10. Enable Developer Mode in Discord (User Settings → Advanced)
# 11. Right-click on channels to copy their IDs

# Discord bot token (required to enable Discord integration)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Enable Discord integration (true/false)
DISCORD_ENABLED=true

# Channel Configuration
# Comma-separated list of channel IDs where the bot should respond
# Example: DISCORD_CHANNEL_IDS=1234567890,9876543210
DISCORD_CHANNEL_IDS=your_channel_id_here

# Dedicated channel for status updates (self-improvements, knowledge updates, etc.)
DISCORD_STATUS_CHANNEL_ID=your_status_channel_id_here

# Bot Behavior
# Require @mention to respond (true/false)
DISCORD_MENTION_REQUIRED=false

# Maximum message length (Discord limit is 2000)
DISCORD_MAX_MESSAGE_LENGTH=2000

# Show typing indicator while processing (true/false)
DISCORD_TYPING_INDICATOR=true

# Use rich embeds for responses (true/false)
DISCORD_EMBED_RESPONSES=true

# Command prefix (empty for natural messages, or set to "!agent" for command-style)
DISCORD_COMMAND_PREFIX=

# Rate Limiting
# Maximum messages per user per minute
DISCORD_RATE_LIMIT_MESSAGES=10

# Cooldown between messages from same user (seconds)
DISCORD_COOLDOWN_SECONDS=2

# Status Updates Configuration
# Enable automatic status updates (true/false)
DISCORD_STATUS_UPDATES_ENABLED=true

# Post status when self-improvement cycle completes (true/false)
DISCORD_STATUS_ON_IMPROVEMENT=true

# Post status when significant knowledge is added (true/false)
DISCORD_STATUS_ON_KNOWLEDGE_UPDATE=true

# Post status for high-quality interactions (true/false)
DISCORD_STATUS_ON_HIGH_QUALITY=false

# Web Search Integration Configuration
# Enable web search capability (true/false)
WEB_SEARCH_ENABLED=true

# Default search provider: duckduckgo, tavily, or serpapi
# DuckDuckGo is free and requires no API key
WEB_SEARCH_DEFAULT_PROVIDER=duckduckgo

# Maximum number of search results to return
WEB_SEARCH_MAX_RESULTS=5

# Optional: Tavily API key (recommended for AI-optimized search)
# Get your API key at: https://tavily.com
TAVILY_API_KEY=your_tavily_api_key_here

# Optional: SerpAPI key (for Google search results)
# Get your API key at: https://serpapi.com
SERPAPI_KEY=your_serpapi_key_here